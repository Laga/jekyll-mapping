<script src="http://www.openlayers.org/api/OpenLayers.js"></script>
<script type="text/javascript">
var map;
jekyllMapping = function(){
    return {
        mappingInitialize: function() {
            var markers = new OpenLayers.Layer.Markers("Markers")
            var fromProjection = new OpenLayers.Projection("EPSG:4326");   // Transform from WGS 1984
            var toProjection   = new OpenLayers.Projection("EPSG:900913"); // to Spherical Mercator Projection
            var center = new OpenLayers.LonLat({{ page.longitude }},{{ page.latitude }}).transform( fromProjection, toProjection);
            map = new OpenLayers.Map("jekyll-mapping");
            map.addLayer(new OpenLayers.Layer.OSM());
            map.setCenter(center, {{ site.mapping.zoom }});
            map.addLayer(markers);
            markers.addMarker(new OpenLayers.Marker(center));
        }
    }
}()

jekyllMapping.mappingInitialize();
</script>